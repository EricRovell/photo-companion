{
  "name": "photo-companion",
  "description": "Minimalistic photography toolkit progressive web application.",
  "private": true,
  "version": "2.7.0",
  "type": "module",
  "author": "Eric Rovell",
  "license": "MIT",
  "homepage": "https://github.com/EricRovell/photo-companion#readme",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "npm run lint:code && npm run lint:styles && npm run lint:types",
    "lint:code": "eslint src/**/*.{ts,js,svelte}",
    "lint:styles": "npx stylelint src/**/*.css",
    "lint:types": "svelte-check --tsconfig ./tsconfig.json",
    "test:unit": "vitest run",
    "version": "node scripts/update-service-worker.js && git add public/service-worker.js"
  },
  "keywords": [
    "photography",
    "scheduler",
    "web-application"
  ],
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tsconfig/svelte": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "eslint-plugin-svelte": "^2.35.0",
    "mdsvex": "^0.11.0",
    "postcss-nesting": "^12.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-stylistic": "^0.4.3",
    "svelte": "^4.2.5",
    "svelte-check": "^3.6.0",
    "svelte-pathfinder": "^4.7.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "suncalc3": "^2.0.5"
  }
}
