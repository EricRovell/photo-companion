{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"declaration": true,
		"noEmit": true,
		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./src/**/*.js",
		"**/*.d.ts",
		"./global.d.ts",
		"./vitest.d.ts"
	],
	"exclude": [
		"node_modules/",
		"./src/deprecated",
		"**/dist/"
	]
}
