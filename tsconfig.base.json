{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"declaration": true,
		"noEmit": true,
		"strict": true,
		"esModuleInterop": true
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.js",
		"./src/**/*.svelte",
		"./*.js",
		"./*.ts",
		"**/*.d.ts",
		"../../../global.d.ts"
	],
	"exclude": [
		"node_modules/"
	]
}
