{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"baseUrl": "./",
		"paths": {
			"@lib/*": [ "./src/lib/*" ],
			"@locale": [ "./src/lib/locale/index.ts" ],
			"@services/*": [ "./src/services/*" ],
		},
		"lib": [
			"WebWorker",
			"ES2023"
		]
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte",
		"test/*.js",
		"../../../global.d.ts"
	],
	"exclude": [
		"src/service-worker.js"
	]
}
