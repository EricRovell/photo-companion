{
	"files.exclude": {
		"**/.git": true,
	},
	"search.exclude": {
		"**/node_modules": true,
		"**/deprecated": true
	},
	"files.associations": {
		"*.mdx": "markdown"
	},
	"eslint.experimental.useFlatConfig": true,
	"eslint.workingDirectories": [
		"./src/apps/*",
		"./src/core/*",
		"./src/packages/*"
	],
	"css.lint.validProperties": [
		"cx",
		"cy",
		"r"
	],
	"cSpell.language": "en,ru,en-US,ru-RU"
}
