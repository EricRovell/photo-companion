{
	"buildCommand": "npm i pnpm -g && pnpm build",
	"cleanUrls": true,
	"devCommand": "pnpm build && pnpm dev",
	"framework": "solidjs",
	"headers": [
		{
			"source": "/service-worker.js",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=0, must-revalidate"
				}
			]
		}
	],
	"github": {
		"enabled": false,
		"silent": true
	},
	"outputDirectory": "packages/photo-companion/dist",
	"rewrites": [
		{
			"source": "/robots.txt",
			"destination": "/robots.txt"
		},
		{
			"source": "/(.*)",
			"destination": "/"
		}
	]
}
