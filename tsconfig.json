{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"baseUrl": "./",
		"paths": {
			"@lib/*": [ "./src/lib/*" ],
			"@services/*": [ "./src/services/*" ],
		},
		"lib": [ "WebWorker", "ESNext" ]
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte"
	],
	"exclude": [
		"src/service-worker.js"
	],
	"references": [
		{ "path": "./tsconfig.node.json" }
	]
}
